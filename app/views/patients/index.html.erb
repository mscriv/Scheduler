<h1>Listing patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td>
        <%= link_to "List Appointments", patient_appointments_path(patient) %>
        <%= link_to "Schedule an Appointment", new_patient_appointment_path(patient) %> 
        <%= link_to 'Show', patient %>
        <%= link_to 'Edit', edit_patient_path(patient) %>  
        <%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path %>
